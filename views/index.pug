extends layout

block content
  h1 Books
  p
  form(action='/books' class='form')
    input#query(type='search' name='q' placeholder='Search...', value= search.search)
    button Search
  p   
    a.button(href='/books/new') Add Book
    if (q)
      a.button(href='/books') Back to Books List
      
    table 
      thead 
        tr 
          th id 
          th Title 
          th Author 
          th Genre 
          th Year 
      tbody
        each book in books 
         tr 
          td #{book.id}
          td
            a(href=`/books/${book.id}`) #{book.title}
          td #{book.author}
          td #{book.genre}
          td #{book.year}